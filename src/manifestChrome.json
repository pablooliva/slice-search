{
  "name": "Slice Custom Search",
  "short_name": "Slice Search",
  "description": "To use, type 'ss' into the url bar, plus keyword for custom-defined search engine followed by search terms for a custom Slice Search. (e.g. ss ng <search text>).",
  "version": "1.3",
  "manifest_version": 3,

  "icons": {
    "16": "icons/slice-icon-16.png",
    "48": "icons/slice-icon-48.png",
    "128": "icons/slice-icon-128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "omnibox": {
    "keyword": "ss"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": ["storage"],

  "action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/slice-optimized-19x19.png",
      "38": "icons/slice-optimized-38x38.png"
    },
    "default_title": "Slice Custom Search"
  }
}
